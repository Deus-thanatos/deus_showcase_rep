msg_0 = "Enter an equation"
msg_1 = "Do you even know what numbers are? Stay focused!"
msg_2 = "Yes ... an interesting math operation. You've slept through all classes, haven't you?"
msg_3 = "Yeah... division by zero. Smart move..."
msg_4 = "Do you want to store the result? (y / n):"
msg_5 = "Do you want to continue calculations? (y / n):"
msg_6 = " ... lazy"
msg_7 = " ... very lazy"
msg_8 = " ... very, very lazy"
msg_9 = "You are"
msg_10 = "Are you sure? It is only one digit! (y / n)"
msg_11 = "Don't be silly! It's just one number! Add to the memory? (y / n)"
msg_12 = "Last chance! Do you really want to embarrass yourself? (y / n)"
error_msg = "Error: Invalid operation"
memory = 0


def calculate_expression(calc):
    global memory

    try:
        # Split the input into x, operation, and y
        x, operation, y = calc.split()

        # Check the memory keyword in input
        if x == "M":
            x = memory
        if y == "M":
            y = memory

        # Convert x and y to float
        x = float(x)
        y = float(y)

        check(x, y, operation)

        # Check if the operation is a single character
        if len(operation) != 1:
            return error_msg

        # Perform the calculation based on the operation
        if operation == "/" and y != 0:
            result = x / y
        elif operation == "/" and y == 0:
            print(msg_3)
            return msg_0
        else:
            if operation == "+":
                result = x + y
            elif operation == "-":
                result = x - y
            elif operation == "*":
                result = x * y
            else:
                return msg_2

        return result

    except ValueError:
        return msg_1


def is_one_digit(v):
    if -10 < v < 10 and v.is_integer():
        output = True
    else:
        output = False

    return output


def check(v1, v2, v3):
    msg = ""
    if is_one_digit(v1) and is_one_digit(v2):
        msg += msg_6
    if (v1 == 1 or v2 == 1) and v3 == "*":
        msg += msg_7
    if (v1 == 0 or v2 == 0) and (v3 == "*" or v3 == "+" or v3 == "-"):
        msg += msg_8
    if msg != "":
        msg = msg_9 + msg

    print(msg)


def start_calc():
    global memory

    while True:
        print(msg_0)
        user_input = input()

        result = calculate_expression(user_input)

        if isinstance(result, float):
            print(result)

            while True:
                print(msg_4)
                answer_msg_4 = input()

                if answer_msg_4 == "y":
                    print(msg_10)
                    answer = input()
                    if answer == "y":
                        print(msg_11)
                        answer = input()
                        if answer == "y":
                            print(msg_12)
                            answer = input()
                            if answer == "y":
                                memory += result
                                break
                        else:
                            pass
                    else:
                        pass
                    break
                elif answer_msg_4 == "n":
                    break
                else:
                    print("Invalid response. Please enter 'y' or 'n'.")

            while True:
                print(msg_5)
                answer_msg_5 = input()

                if answer_msg_5 == "y":
                    break
                elif answer_msg_5 == "n":
                    return
                else:
                    print("Invalid response. Please enter 'y' or 'n'.")


start_calc()
